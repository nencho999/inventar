@model Inventar.Web.ViewModels.SalesPoint.SalesPointFormViewModel
@using Inventar.Data.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Model.Id == null ? Localizer["Add Sales Point"] : Localizer["Edit Sales Point"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h3 mb-0">@(Model.Id == null ? Localizer["Add New Sales Point"] : Localizer["Edit Sales Point"])</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> @Localizer["Back to List"]
    </a>
</div>

<form asp-action="@(Model.Id == null ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-lg-5">

            <div class="col-lg-5">

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0 fs-6 text-uppercase"><i class="fas fa-info-circle me-2"></i> @Localizer["General Information"]</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label fw-bold">@Localizer["Type"]</label>
                            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<SalesPointType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["Name"] <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="@Localizer["e.g. Central Store"]" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">@Localizer["Address"] <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fs-6 text-uppercase"><i class="fas fa-boxes me-2"></i> @Localizer["Sealed Products"]</h5>
                    <div class="form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" id="selectAllProducts" checked>
                        <label class="form-check-label text-white small" for="selectAllProducts">@Localizer["Select All"]</label>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover align-middle table-sm mb-0">
                            <thead class="bg-light sticky-top" style="z-index: 5;">
                                <tr>
                                    <th style="width: 40px;" class="text-center">#</th>
                                    <th>@Localizer["Product"]</th>
                                    <th style="width: 140px;">@Localizer["Discount"]</th>
                                    <th style="width: 100px;">@Localizer["Type"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Products.Count; i++)
                                {
                                    <tr class="@(Model.Products[i].IsSelected ? "" : "opacity-50 bg-light")">
                                        <td class="text-center">
                                            <input type="hidden" asp-for="Products[i].ProductId" />
                                            <input type="hidden" asp-for="Products[i].ProductName" />
                                            <div class="form-check d-flex justify-content-center">
                                                <input asp-for="Products[i].IsSelected" class="form-check-input product-check" />
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-dark">@Model.Products[i].ProductName</span>
                                        </td>
                                        <td>
                                            <input asp-for="Products[i].PriceReduction" type="number" step="0.01" class="form-control form-control-sm text-end" placeholder="0" />
                                        </td>
                                        <td>
                                            <select asp-for="Products[i].IsPercentage" class="form-select form-select-sm border-0 bg-light">
                                                <option value="true">%</option>
                                                <option value="false">@Localizer["lv."]</option>
                                            </select>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fixed-bottom bg-white border-top py-3 shadow-lg" style="z-index: 1000; margin-left: 250px;">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            <span class="text-muted small"><i class="fas fa-info-circle"></i> @Localizer["Changes are not saved until you click Save."]</span>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary me-2">@Localizer["Cancel"]</a>
                <button type="submit" class="btn btn-success px-5 fw-bold"><i class="fas fa-save me-2"></i> @Localizer["Save Changes"]</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const selectAllCheckbox = document.getElementById('selectAllProducts');
            const productCheckboxes = document.querySelectorAll('.product-check');

            if(selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    productCheckboxes.forEach(chk => {
                        chk.checked = this.checked;
                        const tr = chk.closest('tr');
                        if(this.checked) {
                            tr.classList.remove('opacity-50', 'bg-light');
                        } else {
                            tr.classList.add('opacity-50', 'bg-light');
                        }
                    });
                });
            }

            productCheckboxes.forEach(chk => {
                chk.addEventListener('change', function() {
                    const tr = this.closest('tr');
                    if(this.checked) {
                        tr.classList.remove('opacity-50', 'bg-light');
                    } else {
                        tr.classList.add('opacity-50', 'bg-light');
                    }
                });
            });

            const expensesContainer = document.getElementById('expensesContainer');

            if(expensesContainer) {
                expensesContainer.addEventListener('change', function(e) {
                    const target = e.target;

                    if (target.classList.contains('is-recurring-select')) {
                        const row = target.closest('.expense-row');
                        const oneTimeDiv = row.querySelector('.one-time-field');
                        const recurringDiv = row.querySelector('.recurring-field');

                        if (target.value === 'true') {
                            oneTimeDiv.classList.add('d-none');
                            recurringDiv.classList.remove('d-none');
                        } else {
                            oneTimeDiv.classList.remove('d-none');
                            recurringDiv.classList.add('d-none');
                        }
                    }

                    if (target.classList.contains('frequency-select')) {
                        const row = target.closest('.recurring-field');
                        const customIntervalSelect = row.querySelector('.custom-interval');

                        if (target.value == "3") {
                            customIntervalSelect.classList.remove('d-none');
                        } else {
                            customIntervalSelect.classList.add('d-none');
                        }
                    }
                });

                expensesContainer.addEventListener('click', function(e) {
                    const btn = e.target.closest('.delete-row-btn');
                    if (btn) {
                        const row = btn.closest('.expense-row');

                        const deletedFlag = row.querySelector('.is-deleted-flag');
                        if (deletedFlag) deletedFlag.value = 'true';

                        row.style.display = 'none';
                    }
                });
            }
        });
    </script>
}