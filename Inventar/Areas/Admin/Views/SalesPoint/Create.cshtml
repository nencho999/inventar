@model Inventar.Web.ViewModels.SalesPoint.SalesPointFormViewModel
@using Inventar.Data.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    bool isNew = Model.Id == null;
    ViewData["Title"] = isNew ? Localizer["Add Sales Point"] : Localizer["Edit Sales Point"];

    string themeColor = isNew ? "primary" : "warning";
    string btnClass = isNew ? "btn-primary" : "btn-warning text-dark";
    string textClass = isNew ? "text-primary" : "text-warning";
    string borderSubtle = isNew ? "border-primary-subtle" : "border-warning-subtle";
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: @(isNew ? "#0d6efd" : "#ffc107");
        box-shadow: 0 0 0 0.25rem @(isNew ? "rgba(13, 110, 253, 0.25)" : "rgba(255, 193, 7, 0.25)");
    }

    .form-check-input:checked {
        background-color: @(isNew ? "#0d6efd" : "#ffc107");
        border-color: @(isNew ? "#0d6efd" : "#ffc107");
    }

    .sticky-top {
        top: -1px;
        z-index: 10;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h3 mb-0 @textClass fw-bold">
        <i class="fas @(isNew ? "fa-plus-circle" : "fa-edit") me-2"></i>
        @(isNew? Localizer["Add New Sales Point"] : Localizer["Edit Sales Point"])
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
        <i class="fas fa-arrow-left me-1"></i> @Localizer["Back to List"]
    </a>
</div>

<form asp-action="@(isNew ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-@themeColor @(isNew ? "text-white" : "text-dark") py-3">
                    <h5 class="mb-0 fs-6 text-uppercase fw-bold">
                        <i class="fas fa-info-circle me-2"></i> @Localizer["General Information"]
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label asp-for="Type" class="form-label fw-bold">@Localizer["Type"]</label>
                        <select asp-for="Type" class="form-select @borderSubtle" asp-items="Html.GetEnumSelectList<SalesPointType>()"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-bold">@Localizer["Status"]</label>
                        <select asp-for="Status" class="form-select @borderSubtle" asp-items="Html.GetEnumSelectList<WarehouseStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">@Localizer["Name"] <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control @borderSubtle" placeholder="@Localizer["e.g. Central Store"]" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold">@Localizer["Address"] <span class="text-danger">*</span></label>
                        <input asp-for="Address" class="form-control @borderSubtle" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">@Localizer["Description"]</label>
                        <textarea asp-for="Description" class="form-control @borderSubtle" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>

        @* Дясна колона: Продукти *@
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 fs-6 text-uppercase fw-bold"><i class="fas fa-boxes me-2"></i> @Localizer["Products and Discounts"]</h5>
                    <div class="form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" id="selectAllProducts" checked>
                        <label class="form-check-label text-white small fw-bold" for="selectAllProducts">@Localizer["Select All"]</label>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover align-middle table-sm mb-0">
                            <thead class="bg-light sticky-top shadow-sm">
                                <tr>
                                    <th style="width: 50px;" class="text-center">#</th>
                                    <th>@Localizer["Product"]</th>
                                    <th>@Localizer["Base Price"]</th>
                                    <th style="width: 130px;">@Localizer["Final Price"]</th>
                                    <th style="width: 110px;">@Localizer["Discount"]</th>
                                    <th style="width: 90px;">@Localizer["Type"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Products.Count; i++)
                                {
                                    <tr class="product-row @(Model.Products[i].IsSelected ? "" : "opacity-50 bg-light")"
                                        data-original-price="@Model.Products[i].OriginalPrice">
                                        <td class="text-center">
                                            <input type="hidden" asp-for="Products[i].ProductId" />
                                            <input type="hidden" asp-for="Products[i].ProductName" />
                                            <input type="hidden" asp-for="Products[i].OriginalPrice" class="orig-price-hidden" />
                                            <input asp-for="Products[i].IsSelected" class="form-check-input product-check" />
                                        </td>
                                        <td><span class="fw-bold">@Model.Products[i].ProductName</span></td>
                                        <td><span class="text-muted">@Model.Products[i].OriginalPrice.ToString("N2")</span></td>
                                        <td>
                                            <input type="number" step="0.01" class="form-control form-control-sm final-price-input" placeholder="0.00" />
                                        </td>
                                        <td>
                                            <input asp-for="Products[i].PriceReduction" type="number" step="0.01" class="form-control form-control-sm text-end discount-input" />
                                        </td>
                                        <td>
                                            <select asp-for="Products[i].IsPercentage" class="form-select form-select-sm is-percentage-select fw-bold">
                                                <option value="true">%</option>
                                                <option value="false">lv.</option>
                                            </select>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Долен фиксиран бар *@
    <div class="fixed-bottom bg-white border-top py-3 shadow-lg" style="z-index: 1000; margin-left: 250px;">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            <span class="text-muted small"><i class="fas fa-info-circle @textClass"></i> @Localizer["Changes are not saved until you click Save."]</span>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 me-2">@Localizer["Cancel"]</a>
                <button type="submit" class="btn @btnClass px-5 fw-bold shadow-sm">
                    <i class="fas fa-save me-2"></i> @Localizer["Save Changes"]
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tableBody = document.querySelector('tbody');

            // Масово селектиране
            document.getElementById('selectAllProducts').addEventListener('change', function() {
                const isChecked = this.checked;
                document.querySelectorAll('.product-check').forEach(cb => {
                    cb.checked = isChecked;
                    cb.closest('tr').classList.toggle('opacity-50', !isChecked);
                    cb.closest('tr').classList.toggle('bg-light', !isChecked);
                });
            });

            // Промяна на визията при чекване на продукт
            tableBody.addEventListener('change', function(e) {
                if (e.target.classList.contains('product-check')) {
                    const row = e.target.closest('tr');
                    row.classList.toggle('opacity-50', !e.target.checked);
                    row.classList.toggle('bg-light', !e.target.checked);
                }
            });

            // Динамични изчисления
            tableBody.addEventListener('input', function (e) {
                const row = e.target.closest('tr');
                if (!row) return;

                const originalPrice = parseFloat(row.getAttribute('data-original-price')) || 0;
                const finalPriceInput = row.querySelector('.final-price-input');
                const discountInput = row.querySelector('.discount-input');
                const isPercentage = row.querySelector('.is-percentage-select').value === "true";

                // Ако пипаме Финална Цена
                if (e.target.classList.contains('final-price-input')) {
                    let val = parseFloat(finalPriceInput.value) || 0;
                    if (val > originalPrice) { val = originalPrice; finalPriceInput.value = originalPrice.toFixed(2); }

                    if (isPercentage) {
                        discountInput.value = originalPrice > 0 ? (((originalPrice - val) / originalPrice) * 100).toFixed(2) : 0;
                    } else {
                        discountInput.value = (originalPrice - val).toFixed(2);
                    }
                }

                // Ако пипаме Намалението или Типа (%/lv)
                if (e.target.classList.contains('discount-input') || e.target.classList.contains('is-percentage-select')) {
                    let disc = parseFloat(discountInput.value) || 0;
                    let final = 0;

                    if (isPercentage) {
                        if (disc > 100) { disc = 100; discountInput.value = 100; }
                        final = originalPrice - (originalPrice * (disc / 100));
                    } else {
                        if (disc > originalPrice) { disc = originalPrice; discountInput.value = originalPrice.toFixed(2); }
                        final = originalPrice - disc;
                    }
                    finalPriceInput.value = final.toFixed(2);
                }
            });

            // Инициализация на крайните цени при зареждане
            document.querySelectorAll('.product-row').forEach(row => {
                const orig = parseFloat(row.getAttribute('data-original-price'));
                const disc = parseFloat(row.querySelector('.discount-input').value) || 0;
                const isPct = row.querySelector('.is-percentage-select').value === "true";
                const finalInput = row.querySelector('.final-price-input');

                if (isPct) {
                    finalInput.value = (orig - (orig * (disc / 100))).toFixed(2);
                } else {
                    finalInput.value = (orig - disc).toFixed(2);
                }
            });
        });
    </script>
}