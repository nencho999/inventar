@model IEnumerable<Inventar.Web.ViewModels.SalesPoint.ExpenseListViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = ViewBag.PageTitle;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark mb-0">
        <i class="fas fa-list-ul text-primary me-2"></i> @ViewBag.PageTitle
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> @Localizer["Back"]
    </a>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-uppercase small fw-bold text-muted">
                <tr>
                    <th class="ps-4">@Localizer["Expense Name"]</th>
                    <th>@Localizer["Base (Sales Point)"]</th>
                    <th>@Localizer["Frequency / Date"]</th>
                    <th class="text-end">@Localizer["Amount"]</th>
                    <th class="text-end pe-4">@Localizer["Action"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">@item.ExpenseName</td>
                        <td>
                            <i class="fas fa-store text-muted me-2 small"></i> @item.SalesPointName
                        </td>
                        <td class="text-muted small">@item.DateOrFrequency</td>
                        <td class="text-end fw-bold">@item.Amount.ToString("N2") @Localizer["lv."]</td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.SalesPointId" class="btn btn-sm btn-light border" title="Go to Base">
                                <i class="fas fa-external-link-alt text-secondary"></i>
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">No expenses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
