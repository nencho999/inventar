@model ProductFormModel
@using Inventar.Web.ViewModels.Product
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit Product"];
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i> @ViewData["Title"]</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">@Localizer["Cancel"]</a>
                        <button type="submit" class="btn btn-primary px-5">@Localizer["Update Product"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>