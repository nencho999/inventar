@model Inventar.Web.ViewModels.User.UserPasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Reset Password"];
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-secondary text-white p-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-key me-2"></i> @Localizer["Set New Password"]</h5>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-light border small mb-3">
                        <i class="fas fa-info-circle text-info me-1"></i>
                        @Localizer["Changing password for user:"] <strong>@Model.Email</strong>
                    </div>

                    <form asp-action="ChangePassword" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold">@Localizer["New Password"]</label>
                            <input asp-for="NewPassword" class="form-control" placeholder=@Localizer["Enter new strong password"] />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-secondary btn-lg fw-bold shadow-sm">@Localizer["Reset Password"]</button>
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">@Localizer["Cancel"]</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}