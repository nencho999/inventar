@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Inventar.Web.ViewModels.Stock.InventoryFilterViewModel

@{
    ViewData["Title"] = Localizer["Current Stock Levels"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>📊 @Localizer["Current Stock Levels"]</h2>

    <div>
        <a asp-action="History" class="btn btn-outline-secondary me-2">
            <i class="fas fa-history"></i> @Localizer["History"]
        </a>

        <a asp-action="RecordMovement" class="btn btn-primary">
            <i class="fas fa-exchange-alt"></i> @Localizer["Record Movement"]
        </a>
    </div>
</div>

<div class="card mb-4 bg-light">
    <div class="card-body">
        <form method="get" asp-action="Inventory" class="row g-3">

            <div class="col-md-4">
                <label class="form-label fw-bold">@Localizer["Search"]</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="@Localizer["Base name, Material..."]" />
                </div>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">@Localizer["Filter by Base"]</label>
                <select name="baseId" class="form-select" 
                        asp-items="@(new SelectList(Model.Bases, "Id", "Name", Model.BaseId))">
                    <option value="">@Localizer["-- All Bases --"]</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">@Localizer["Filter by Material"]</label>
                <select name="materialId" class="form-select" 
                        asp-items="@(new SelectList(Model.Materials, "Id", "Name", Model.MaterialId))">
                    <option value="">@Localizer["-- All Materials --"]</option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-dark w-100">@Localizer["Filter"]</button>
                <a asp-action="Inventory" class="btn btn-outline-secondary" title="@Localizer["Clear Filters"]">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>🏢 @Localizer["Base"]</th>
                    <th>📦 @Localizer["Material"]</th>
                    <th class="text-end">@Localizer["Quantity"]</th>
                    <th>@Localizer["Unit"]</th>
                    <th class="text-end">@Localizer["Avg. Price"]</th>
                    <th class="text-end">@Localizer["Total Value"]</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.StockLevels)
            {
                <tr>
                    <td class="fw-bold">@item.BaseName</td>
                    <td>@item.MaterialName</td>
                    <td class="text-end fw-bold @(item.Quantity < 0 ? "text-danger" : "text-success")">
                        @item.Quantity.ToString("N2")
                    </td>
                    <td><span class="badge bg-secondary">@item.Unit</span></td>
                    <td class="text-end text-muted">
                        @if(item.AveragePrice > 0) 
                        {
                                <span>@item.AveragePrice.ToString("N2") @Localizer["lv."]</span>
                        }
                        else 
                        {
                            <small>-</small>
                        }
                    </td>
                
                    <td class="text-end fw-bold text-dark">
                        @if(item.TotalValue > 0) 
                        {
                                <span>@item.TotalValue.ToString("N2") @Localizer["lv."]</span>
                        }
                        else 
                        {
                            <small>-</small>
                        }
                    </td>
                </tr>
            }

            @if (!Model.StockLevels.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        @Localizer["No inventory records found matching your criteria."]
                    </td>
                </tr>
            }
            else
            {
                <tr class="table-secondary fw-bold border-top border-dark">
                    <td colspan="5" class="text-end text-uppercase">@Localizer["Total Inventory Value"]:</td>
                    <td class="text-end text-primary fs-5">
                            @Model.StockLevels.Sum(x => x.TotalValue).ToString("N2") @Localizer["lv."]
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>