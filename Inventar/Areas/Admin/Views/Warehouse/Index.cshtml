@using Microsoft.AspNetCore.Mvc.Localization
@using Inventar.Data.Models
@inject IViewLocalizer Localizer
@model Inventar.Web.ViewModels.Warehouse.WarehouseIndexViewModel

@{
    ViewData["Title"] = Localizer["Warehouse Management"];
}

<style>
    .dashboard-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        transition: transform 0.2s;
        background-color: #fff;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        }

    .icon-box {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
    }

    .bg-light-blue {
        background-color: #e3f2fd;
        color: #0d6efd;
    }

    .bg-light-green {
        background-color: #e8f5e9;
        color: #198754;
    }

    .bg-light-orange {
        background-color: #fff3e0;
        color: #fd7e14;
    }

    .status-badge-sm {
        font-size: 0.7rem;
        padding: 4px 10px;
        border-radius: 20px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-operational {
        background-color: #e0f2f1;
        color: #00695c;
    }

    .status-maintenance {
        background-color: #fff3e0;
        color: #ef6c00;
    }

    .status-closed {
        background-color: #eceff1;
        color: #455a64;
    }

    .base-card-title {
        font-weight: 600;
        color: #333;
        font-size: 1.1rem;
    }

    .location-text {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .expense-label {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-action-wide {
        border: 1px solid #dee2e6;
        color: #495057;
        font-weight: 500;
        transition: all 0.2s;
        background-color: #fff;
    }

        .btn-action-wide:hover {
            background-color: #f8f9fa;
            border-color: #cdd4db;
            color: #212529;
        }

    .capacity-container {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #e9ecef;
    }

    .stat-card {
        border-radius: 5px;
        padding: 20px;
        color: white;
        display: flex;
        align-items: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

        .stat-card i {
            font-size: 2.5rem;
            margin-right: 15px;
            opacity: 0.8;
        }

        .stat-card .info h4 {
            margin: 0;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .stat-card .info h2 {
            margin: 0;
            font-weight: bold;
        }

    .bg-info-custom {
        background-color: #00c0ef;
    }
    .bg-warning-custom {
        background-color: #f39c12;
    }
    .bg-success-custom {
        background-color: #00a65a;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-dark">@Localizer["Warehouse Management"]</h3>
    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:40px; height:40px;">
        <i class="fas fa-industry"></i>
    </div>
</div>

<div class="row mb-4 g-3">
    <div class="col-md-4">
        <div class="stat-card bg-info-custom">
            <i class="fas fa-globe"></i>
            <div class="info">
                <h4>@Localizer["Total Active Centers"]</h4>
                <h2>@Model.TotalWarehouses</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="stat-card bg-warning-custom">
            <i class="fas fa-tachometer-alt"></i>
            <div class="info">
                <h4>@Localizer["Under Construction"]</h4>
                <h2>@Model.UnderConstructionCount</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="stat-card bg-success-custom">
            <i class="fas fa-tachometer-alt"></i>
            <div class="info">
                <h4>@Localizer["Operational"]</h4>
                <h2>@Model.OperationalCount</h2>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100 position-relative border-start border-4 border-success">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["Monthly Expenses"]</span>
                    <h2 class="mb-0 fw-bold mt-2 text-success">@Model.TotalMonthlyExpenses.ToString("N2") @Localizer["lv."]</h2>
                </div>
                <div class="icon-box bg-light-green text-success">
                    <i class="fas fa-wallet fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100 position-relative border-start border-4 border-warning">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["One-Time Expenses"]</span>
                    <h2 class="mb-0 fw-bold mt-2 text-warning">@Model.TotalOneTimeExpenses.ToString("N2") @Localizer["lv."]</h2>
                </div>
                <div class="icon-box bg-light-orange text-warning">
                    <i class="fas fa-coins fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
    <h5 class="fw-bold mb-0">@Localizer["All Warehouses"]</h5>

    <div class="d-flex gap-2">
        <form method="get" class="d-flex">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                <input type="text" name="search" class="form-control border-start-0 ps-0" placeholder="@Localizer["Search warehouses..."]" />
            </div>
        </form>

        <a asp-action="Create" class="btn btn-primary px-4 fw-bold">
            <i class="fas fa-plus-circle me-1"></i> @Localizer["Add Warehouse"]
        </a>
    </div>
</div>

<div class="row g-4">
    @foreach (var item in Model.Warehouses)
    {
        string statusClass = item.Status switch
        {
            WarehouseStatus.Operational => "status-operational",
            WarehouseStatus.Maintenance => "status-maintenance",
            WarehouseStatus.UnderConstruction => "status-maintenance",
            WarehouseStatus.Closed => "status-closed",
            _ => "bg-light text-dark"
        };

        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card h-100 p-3">
                <div class="card-body p-1 d-flex flex-column h-100">

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="base-card-title mb-0 text-truncate" title="@item.Name">@item.Name</h5>
                            <p class="location-text mb-0 mt-1 text-truncate" style="max-width: 200px;">
                                <i class="fas fa-map-marker-alt me-1"></i> @(string.IsNullOrEmpty(item.Location) ? "No location" : item.Location)
                            </p>
                        </div>
                        <span class="status-badge-sm @statusClass">@item.Status</span>
                    </div>

                    <hr class="text-muted opacity-25" />

                    <div class="capacity-container">
                        <div class="d-flex justify-content-between align-items-end mb-2">
                            <span class="text-muted small fw-bold">
                                <i class="fas fa-box-open me-1"></i> @Localizer["Inventory"]
                            </span>
                            <span class="fw-bold text-dark" style="font-size: 0.9rem;">
                                @item.UsedCapacity.ToString("N0") / @item.TotalCapacity.ToString("N0")
                            </span>
                        </div>

                        <div class="progress shadow-sm" style="height: 10px; border-radius: 10px; background-color: #e2e8f0;">
                            @{
                                var barColor = item.FillPercentage > 90 ? "bg-danger" :
                                item.FillPercentage > 75 ? "bg-warning" : "bg-success";
                            }
                            <div class="progress-bar @barColor"
                                 role="progressbar"
                                 style="width: @item.FillPercentage.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture)%; border-radius: 10px;"
                                 aria-valuenow="@item.FillPercentage"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                        <div class="text-end mt-1">
                            <small class="text-muted" style="font-size: 0.75rem;">@item.FillPercentage.ToString("0.0")% @Localizer["full"]</small>
                        </div>
                    </div>

                    <div class="mb-4 mt-2">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="expense-label text-info">
                                <i class="fas fa-calendar-alt me-1 small"></i> @Localizer["Monthly"]:
                            </span>
                            <span class="fw-bold text-dark">@item.MonthlyExpensesTotal.ToString("N2") @Localizer["lv."]</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="expense-label text-secondary" style="color: #a87e55 !important;">
                                <i class="fas fa-receipt me-1 small"></i> @Localizer["One-Time"]:
                            </span>
                            <span class="fw-bold text-dark">@item.OneTimeExpensesTotal.ToString("N2") @Localizer["lv."]</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="AddExpense" asp-route-id="@item.Id" class="btn btn-action-wide flex-grow-1 text-start ps-3">
                            <i class="fas fa-plus-circle me-2"></i> @Localizer["Add Expense"]
                        </a>

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning text-warning px-3" title="@Localizer["Edit"]">
                            <i class="fas fa-pen"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger px-3" title="@Localizer["Delete"]">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }

    @if (!Model.Warehouses.Any())
    {
        <div class="col-12 text-center py-5">
            <div class="text-muted opacity-50">
                <i class="fas fa-industry fa-3x mb-3"></i>
                <p class="fs-5">@Localizer["No warehouses found."]</p>
            </div>
        </div>
    }
</div>