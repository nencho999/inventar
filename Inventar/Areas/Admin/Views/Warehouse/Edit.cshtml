@model Inventar.Web.ViewModels.Warehouse.WarehouseFormViewModel
@using Inventar.Data.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit Warehouse"];
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-warning text-dark p-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-edit me-2"></i> @Localizer["Edit Warehouse"]
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["Warehouse Name"]</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-bold">@Localizer["Location / Address"]</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-bold">@Localizer["Status"]</label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<WarehouseStatus>()"></select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label fw-bold">@Localizer["Capacity"]</label>
                                <input asp-for="Capacity" class="form-control" />
                                <span asp-validation-for="Capacity" class="text-danger small"></span>
                            </div>
                        </div>

                        <h4 class="mt-4">@Localizer["Капацитет по материали"]</h4>

                        <table class="table table-bordered mt-2" id="capacitiesTable">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["Материал"]</th>
                                    <th>@Localizer["Лимит (Количество)"]</th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody id="capacitiesBody">
                                @* РИСУВАМЕ СЪЩЕСТВУВАЩИТЕ КАПАЦИТЕТИ *@
                                @if (Model.Capacities != null && Model.Capacities.Any())
                                {
                                    for (int i = 0; i < Model.Capacities.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <select asp-for="@Model.Capacities[i].MaterialId" asp-items="Model.AvailableMaterials" class="form-select material-select" required>
                                                    <option value="">-- @Localizer["Избери материал"] --</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input asp-for="@Model.Capacities[i].CapacityLimit" type="number" step="0.01" class="form-control capacity-input" required />
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-danger btn-sm remove-row-btn">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <button type="button" class="btn btn-outline-primary mb-3" id="addCapacityBtn">
                            <i class="fas fa-plus"></i> @Localizer["Добави материал"]
                        </button>

                        <template id="capacityRowTemplate">
                            <tr>
                                <td>
                                    <select name="Capacities[INDEX].MaterialId" class="form-select material-select" required>
                                        <option value="">-- @Localizer["Избери материал"] --</option>
                                        @foreach (var mat in Model.AvailableMaterials)
                                        {
                                            <option value="@mat.Value">@mat.Text</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="number" step="0.01" name="Capacities[INDEX].CapacityLimit" class="form-control capacity-input" placeholder="0.00" required />
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-danger btn-sm remove-row-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </template>

                        <div class="mb-4">
                            <label asp-for="ContactInfo" class="form-label fw-bold">@Localizer["Contact Information"]</label>
                            <textarea asp-for="ContactInfo" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ContactInfo" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold shadow-sm">@Localizer["Save Changes"]</button>
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">@Localizer["Cancel"]</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const addBtn = document.getElementById("addCapacityBtn");
            const tbody = document.getElementById("capacitiesBody");
            const template = document.getElementById("capacityRowTemplate").innerHTML;

            addBtn.addEventListener("click", function () {
                const rowCount = tbody.children.length;
                const newRowHtml = template.replace(/INDEX/g, rowCount);

                tbody.insertAdjacentHTML("beforeend", newRowHtml);
            });

            tbody.addEventListener("click", function (e) {
                if (e.target.closest(".remove-row-btn")) {
                    e.target.closest("tr").remove();
                    reindexRows();
                }
            });

            function reindexRows() {
                const rows = tbody.querySelectorAll("tr");
                rows.forEach((row, index) => {
                    const select = row.querySelector(".material-select");
                    const input = row.querySelector(".capacity-input");

                    if (select) select.name = `Capacities[${index}].MaterialId`;
                    if (input) input.name = `Capacities[${index}].CapacityLimit`;
                });
            }

            addBtn.click();
        });
    </script>
}