@model Inventar.Data.Models.Warehouse
@using Inventar.Data.Models

@{
    ViewData["Title"] = "Delete Warehouse";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-danger text-white p-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i> Delete Warehouse?
                    </h5>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning text-center mb-4">
                        <i class="fas fa-info-circle me-1"></i>
                        Are you sure you want to delete this warehouse?
                        <br><strong>This action cannot be undone.</strong>
                    </div>

                    <div class="bg-light p-3 rounded mb-4 border">
                        <div class="row mb-2">
                            <div class="col-sm-4 text-muted fw-bold">Name:</div>
                            <div class="col-sm-8 fw-bold text-dark">@Model.Name</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 text-muted fw-bold">Location:</div>
                            <div class="col-sm-8">@(Model.Location ?? "-")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 text-muted fw-bold">Status:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-secondary">@Model.Status</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 text-muted fw-bold">Capacity:</div>
                            <div class="col-sm-8">@(Model.Capacity ?? "Not specified")</div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm">
                                <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-light border">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>