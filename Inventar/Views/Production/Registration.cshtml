@using Inventar.Web.ViewModels.Production
@model ProductionRegistrationFormModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Production Registration"];
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 mt-4">
            @* Заглавна част в синьо *@
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-industry me-2"></i> @Localizer["Произведена Стока"]
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-action="Registration" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* 1. Избор на Производствен Център - използваме твоя ProductionCenters списък *@
                    <div class="mb-3">
                        <label asp-for="ProductionCenterId" class="form-label fw-bold text-muted small text-uppercase">
                            @Localizer["Production Center"]
                        </label>
                        <select asp-for="ProductionCenterId" id="centerSelect"
                                asp-items="@(new SelectList(Model.ProductionCenters, "Id", "Name"))"
                                class="form-select border-primary-subtle shadow-sm">
                            <option value="">-- @Localizer["Select Center"] --</option>
                        </select>
                        <span asp-validation-for="ProductionCenterId" class="text-danger small"></span>
                    </div>

                    @* 2. Избор на Продукт - първоначално е празен и забранен *@
                    <div class="mb-3">
                        <label asp-for="ProductId" class="form-label fw-bold text-muted small text-uppercase">
                            @Localizer["Product"]
                        </label>
                        <select asp-for="ProductId" id="productSelect" class="form-select border-primary-subtle shadow-sm" disabled>
                            <option value="">-- @Localizer["First Select Center"] --</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        @* 3. Дата на производство *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductionDate" class="form-label fw-bold text-muted small text-uppercase">
                                @Localizer["Date"]
                            </label>
                            <input asp-for="ProductionDate" type="date" class="form-control border-primary-subtle shadow-sm"
                                   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
                        </div>

                        @* 4. Количество *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold text-muted small text-uppercase">
                                @Localizer["Quantity"]
                            </label>
                            <div class="input-group shadow-sm">
                                <input asp-for="Quantity" type="number" step="0.01" class="form-control border-primary-subtle" placeholder="0.00" />
                                <span class="input-group-text bg-primary-subtle text-primary fw-bold">QTY</span>
                            </div>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                    </div>

                    @* Бутони *@
                    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            @Localizer["Cancel"]
                        </a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                            <i class="fas fa-save me-2"></i> @Localizer["Register Production"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const centerSelect = document.getElementById('centerSelect');
            const productSelect = document.getElementById('productSelect');

            centerSelect.addEventListener('change', async function() {
                const centerId = this.value;

                // Изчистваме и блокираме второто меню
                productSelect.innerHTML = '<option value="">-- @Localizer["Loading..."] --</option>';
                productSelect.disabled = true;

                if (!centerId) {
                    productSelect.innerHTML = '<option value="">-- @Localizer["First Select Center"] --</option>';
                    return;
                }

                try {
                    // Викаме AJAX метода в контролера
                    const response = await fetch(`/Production/GetProducts?centerId=${centerId}`);

                    if (!response.ok) throw new Error('Network response was not ok');

                    const products = await response.json();

                    productSelect.innerHTML = '<option value="">-- @Localizer["Select Product"] --</option>';

                    if (products && products.length > 0) {
                        products.forEach(p => {
                            // Забележка: JSON сериализацията превръща PascalCase в camelCase (p.id, p.name)
                            const option = new Option(p.name, p.id);
                            productSelect.add(option);
                        });
                        productSelect.disabled = false;
                    } else {
                        productSelect.innerHTML = '<option value="">-- @Localizer["No allowed products found"] --</option>';
                    }

                } catch (error) {
                    console.error("Error loading products:", error);
                    productSelect.innerHTML = '<option value="">-- @Localizer["Error loading data"] --</option>';
                }
            });
        });
    </script>

    <style>
        .border-primary-subtle:focus {
            border-color: #0d6efd !important;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25) !important;
        }
    </style>
}