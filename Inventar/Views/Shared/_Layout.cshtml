@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventar.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

    <div class="d-flex" id="wrapper">

        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                <i class="fas fa-boxes me-2"></i> Inventar
            </div>

            <div class="list-group list-group-flush my-3">

                <a asp-area="" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-home me-2"></i> @Localizer["Home"]
                </a>

                <a asp-area="" asp-controller="PrimaryMaterialBase" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-building me-2"></i> @Localizer["Primary Material Bases"]
                </a>

                <div class="sidebar-heading text-uppercase fs-6 text-muted mt-3 mb-1" style="padding-top: 0; padding-bottom: 0.5rem; border: none; font-size: 0.8rem;">
                    @Localizer["Production"]
                </div>

                <a asp-controller="Production" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-industry me-2"></i> @Localizer["Register Production"]
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <div class="sidebar-heading text-uppercase fs-6 text-muted mt-3 mb-1" style="padding-top: 0; padding-bottom: 0.5rem; border: none; font-size: 0.8rem;">
                        @Localizer["Admin Tools"]
                    </div>

                    <a asp-area="Admin" asp-controller="ProductionCenterManagement" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-warehouse me-2"></i> @Localizer["Production Center Management"]
                    </a>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-industry me-2"></i> @Localizer["Warehouse Management"]
                    </a>
                    <a asp-area="Admin" asp-controller="Stock" asp-action="Inventory" class="list-group-item list-group-item-action">
                        <i class="fas fa-clipboard-list me-2"></i> @Localizer["Inventory"]
                    </a>

                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-box me-2"></i> @Localizer["Product Management"]
                    </a>

                    <a asp-area="Admin" asp-controller="SalesPoint" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-store me-2"></i> @Localizer["Sales Point Management"]
                    </a>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-users-cog me-2"></i> @Localizer["User Management"]
                    </a>
                }
            </div>
        </div>

        <div id="page-content-wrapper" class="d-flex flex-column min-vh-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-3 py-3">
                <div class="container-fluid">
                    <button class="btn btn-outline-dark" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item me-3">
                                <partial name="_SelectLanguagePartial" />
                            </li>
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container-fluid px-4 py-4 flex-grow-1">
                @RenderBody()
            </div>
            <footer class="mt-auto bg-white text-center py-3 border-top text-muted">
                <div class="container">
                    &copy; 2025 - Inventar - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>