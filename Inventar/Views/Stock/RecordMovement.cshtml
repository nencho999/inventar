@model Inventar.Web.ViewModels.Stock.StockTransactionViewModel

@{
    ViewData["Title"] = "Stock Movement";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div asp-validation-summary="All" class="text-danger border p-3 mb-3"></div>
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="fas fa-exchange-alt"></i> Record Stock Movement</h4>
            </div>
            <div class="card-body">
                <form asp-action="RecordMovement" method="post">

                    <div class="mb-3 text-center">
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="IsAcquisition" id="btnRadioIn" value="true" checked autocomplete="off" @(Model.IsAcquisition ? "checked" : "")>
                            <label class="btn btn-outline-success" for="btnRadioIn"><i class="fas fa-plus"></i> IN (Acquisition)</label>

                            <input type="radio" class="btn-check" name="IsAcquisition" id="btnRadioOut" value="false" autocomplete="off" @(!Model.IsAcquisition ? "checked" : "")>
                            <label class="btn btn-outline-danger" for="btnRadioOut"><i class="fas fa-minus"></i> OUT (Usage)</label>
                        </div>
                        <span asp-validation-for="IsAcquisition" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="BaseId" class="form-label fw-bold">Base</label>
                            <select asp-for="BaseId" class="form-select" asp-items="@(new SelectList(Model.Bases, "Id", "Name"))">
                                <option value="">-- Select Base --</option>
                            </select>
                            <span asp-validation-for="BaseId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="MaterialId" class="form-label fw-bold">Material</label>
                            <select asp-for="MaterialId" class="form-select" asp-items="@(new SelectList(Model.Materials, "Id", "Name"))">
                                <option value="">-- Select Material --</option>
                            </select>
                            <span asp-validation-for="MaterialId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold">Quantity</label>
                            <input asp-for="Quantity" class="form-control form-control-lg" type="number" step="0.01" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionDate" class="form-label">Date</label>
                            <input asp-for="TransactionDate" class="form-control form-control-lg" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Additional information..."></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-lg">Save Movement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
