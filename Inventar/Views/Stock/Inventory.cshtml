@model Inventar.Web.ViewModels.Stock.InventoryFilterViewModel

@{
    ViewData["Title"] = "Current Stock Levels";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>📊 Current Stock Levels</h2>
    <a asp-action="RecordMovement" class="btn btn-primary">
        <i class="fas fa-exchange-alt"></i> Record Movement
    </a>
</div>

<div class="card mb-4 bg-light">
    <div class="card-body">
        <form method="get" asp-action="Inventory" class="row g-3">

            <div class="col-md-4">
                <label class="form-label fw-bold">Search</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Base name, Material..." />
                </div>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Filter by Base</label>
                <select name="baseId" class="form-select" 
                        asp-items="@(new SelectList(Model.Bases, "Id", "Name", Model.BaseId))">
                    <option value="">-- All Bases --</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Filter by Material</label>
                <select name="materialId" class="form-select" 
                        asp-items="@(new SelectList(Model.Materials, "Id", "Name", Model.MaterialId))">
                    <option value="">-- All Materials --</option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-dark w-100">Filter</button>
                <a asp-action="Inventory" class="btn btn-outline-secondary" title="Clear Filters">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>🏢 Base</th>
                    <th>📦 Material</th>
                    <th class="text-end">Quantity</th>
                    <th>Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StockLevels)
                {
                    <tr>
                        <td class="fw-bold">@item.BaseName</td>
                        <td>@item.MaterialName</td>
                        <td class="text-end fw-bold @(item.Quantity < 0 ? "text-danger" : "text-success")">
                            @item.Quantity.ToString("N2")
                        </td>
                        <td><span class="badge bg-secondary">@item.Unit</span></td>
                    </tr>
                }

                @if (!Model.StockLevels.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-search fa-3x mb-3 text-secondary opacity-50"></i>
                            <p>No inventory records found matching your filters.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>