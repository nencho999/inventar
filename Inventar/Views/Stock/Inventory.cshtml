@model IEnumerable<Inventar.Web.ViewModels.Stock.StockLevelViewModel>

@{
    ViewData["Title"] = "Текущи Наличности";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>📊 Current Stock Levels</h2>
    <a asp-action="RecordMovement" class="btn btn-primary">
        <i class="fas fa-exchange-alt"></i> Record Movement
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
            <tr>
                <th>🏢 Base</th>
                <th>📦 Material</th>
                <th class="text-end">Quantity</th>
                <th>Unit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.BaseName</td>
                    <td>@item.MaterialName</td>
                    <td class="text-end fw-bold @(item.Quantity < 0 ? "text-danger" : "text-success")">
                        @item.Quantity.ToString("N2")
                    </td>
                    <td><span class="badge bg-secondary">@item.Unit</span></td>
                </tr>
            }
                
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center py-4 text-muted">
                        No inventory records found.
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>