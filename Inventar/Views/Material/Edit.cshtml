@model Inventar.Web.ViewModels.MaterialViewModel

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "New Material" : "Edit Material";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">@(Model.Id == Guid.Empty ? "New Material" : "Edit Material")</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Corn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Unit" class="form-label">Unit</label>
                        <input asp-for="Unit" class="form-control" placeholder="e.g. kg, tons, liters" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
