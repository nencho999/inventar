@model IEnumerable<Inventar.Web.ViewModels.MaterialViewModel>

@{
    ViewData["Title"] = "Materials";
}

<div class="d-flex justify-content-between mb-3">
    <h2>📦 Materials Registry</h2>
    <a asp-action="Edit" class="btn btn-primary"><i class="fas fa-plus"></i> Add Material</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Unit</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td><span class="badge bg-secondary">@item.Unit</span></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-edit"></i>
                </a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this material??');">
                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
