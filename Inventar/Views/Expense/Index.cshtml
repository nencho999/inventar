@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<Inventar.Web.ViewModels.Expense.ExpenseViewModel>

@{
    ViewData["Title"] = Localizer["Expenses List"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-invoice-dollar"></i> @Localizer["Expenses History"]</h2>

    <a asp-controller="PrimaryMaterialBase" asp-action="Index" class="btn btn-outline-primary">
        <i class="fas fa-home"></i> @Localizer["Back to Dashboard"]
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th>@Localizer["Date"]</th>
                    <th>@Localizer["Base / Location"]</th>
                    <th>@Localizer["Description"]</th>
                    <th class="text-end">@Localizer["Amount"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-nowrap">@item.Date.ToString("dd.MM.yyyy")</td>

                        <td>
                            <div class="fw-bold text-dark">
                                <i class="fas fa-warehouse text-secondary me-1"></i> @item.BaseName
                            </div>
                        </td>

                        <td class="text-muted">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <span>@item.Description</span>
                            }
                            else
                            {
                                <span class="small fst-italic text-secondary">@Localizer["- No description -"]</span>
                            }
                        </td>

                        <td class="text-end fw-bold text-danger">
                            @item.Amount.ToString("N2") @Localizer["lv."]
                        </td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="fas fa-receipt fa-2x mb-3 opacity-50"></i>
                            <p>@Localizer["No expenses recorded yet."]</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
