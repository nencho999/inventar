@model IEnumerable<Inventar.Web.ViewModels.BaseViewModels.BaseListViewModel>

<h2>Primary Material Bases</h2>

<p class="mb-4">
    <a asp-action="Edit" class="btn btn-primary">➕ Add new base</a>
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">

            <div class="card h-100 shadow-sm border-info">

                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Name)</h5>
                </div>

                <div class="card-body d-flex flex-column">

                    <p class="card-text">
                        <strong><i class="fas fa-map-marker-alt"></i> Address:</strong>
                        @Html.DisplayFor(modelItem => item.Address)
                    </p>

                    <hr class="my-2" />

                    <p class="card-text flex-grow-1">
                        <strong><i class="fas fa-cubes"></i> Capacity:</strong><br />
                        <span class="text-muted small">
                            @Html.DisplayFor(modelItem => item.CapacitySummary)
                        </span>
                    </p>

                    <div class="mt-auto pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <form asp-action="DeleteConfirmed" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this database?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger float-right">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                There are no registered primary material databases. Add your first one now!
            </div>
        </div>
    }
</div>