@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Inventar.Web.ViewModels.Base.DashboardViewModel
@{
    ViewData["Title"] = Localizer["Dashboard"];
}

<style>
    .dashboard-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        transition: transform 0.2s;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
        }

    .icon-box {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
    }

    .bg-light-blue {
        background-color: #e3f2fd;
        color: #0d6efd;
    }

    .bg-light-green {
        background-color: #e8f5e9;
        color: #198754;
    }

    .bg-light-orange {
        background-color: #fff3e0;
        color: #fd7e14;
    }

    .base-card-title {
        font-weight: 600;
        color: #333;
    }

    .location-text {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .expense-label {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-action-wide {
        border: 1px solid #dee2e6;
        color: #495057;
        font-weight: 500;
        transition: all 0.2s;
        background-color: #fff;
    }

        .btn-action-wide:hover {
            background-color: #f8f9fa;
            border-color: #cdd4db;
            color: #212529;
        }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-dark">@Localizer["Dashboard"]</h3>
    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:40px; height:40px;">
        <i class="fas fa-user"></i>
    </div>
</div>

<div class="row mb-4 g-3">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["Total Bases"]</span>
                    <h2 class="mb-0 fw-bold mt-2">@Model.TotalBases</h2>
                </div>
                <div class="icon-box bg-light text-secondary">
                    <i class="fas fa-warehouse fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100 border-start border-4 border-success">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["Inventory Value"]</span>
                    <h2 class="mb-0 fw-bold mt-2 text-success">
                        @Model.TotalInventoryValue.ToString("N2") @Localizer["lv."]
                    </h2>
                </div>
                <div class="icon-box bg-light-green text-success">
                    <i class="fas fa-coins fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100 position-relative hover-shadow">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["Monthly Expenses"]</span>
                    <h2 class="mb-0 fw-bold mt-2">@Model.TotalMonthlyExpenses.ToString("N2") @Localizer["lv."]</h2>

                    <a asp-action="Expenses" asp-route-type="Monthly" class="text-decoration-none small text-muted">
                        @Localizer["View Details"] <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="icon-box bg-light-blue text-primary">
                    <i class="fas fa-file-invoice-dollar fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm rounded-3 p-3 h-100 position-relative hover-shadow">
            <div class="d-flex justify-content-between align-items-start h-100">
                <div>
                    <span class="text-muted small text-uppercase fw-bold">@Localizer["One-Time Expenses"]</span>
                    <h2 class="mb-0 fw-bold mt-2">@Model.TotalOneTimeExpenses.ToString("N2") @Localizer["lv."]</h2>

                    <a asp-action="Expenses" asp-route-type="OneTime" class="text-decoration-none small text-muted">
                        @Localizer["View Details"] <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="icon-box bg-light-orange text-warning">
                    <i class="fas fa-tools fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
    <h5 class="fw-bold mb-0">@Localizer["All Primary Material Bases"]</h5>

    <div class="d-flex gap-2">
        <div class="input-group" style="width: 300px;">
            <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
            <input type="text" class="form-control border-start-0 ps-0" placeholder="@Localizer["Search bases by name, location..."]" />
        </div>

        <button class="btn btn-white border bg-white text-muted">
            <i class="fas fa-filter"></i> @Localizer["Filter"]
        </button>
        
        @if (User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-controller="Material" asp-action="Index" class="btn btn-white border bg-white text-dark">
                <i class="fas fa-seedling text-success"></i> @Localizer["Materials"]
            </a>
            <a asp-action="Edit" class="btn btn-primary px-4">
                <i class="fas fa-plus-circle me-1"></i> @Localizer["Add New Base"]
            </a>
        }
    </div>
</div>

<div class="row g-4">
    @foreach (var item in Model.Bases)
    {
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card h-100 p-3">
                <div class="card-body p-1">

                    <div class="d-flex justify-content-between mb-2">
                        <h5 class="base-card-title mb-0">@item.Name</h5>
                    </div>

                    <p class="location-text mb-1">
                        <i class="fas fa-map-marker-alt me-1"></i> @item.Address
                    </p>
                    <p class="text-muted small mb-3">ID: @item.Id.ToString().Substring(0, 8)...</p>

                    <hr class="text-muted opacity-25" />

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="expense-label text-info">
                                <i class="fas fa-dollar-sign"></i> @Localizer["Monthly Expenses"]:
                            </span>
                            <span class="fw-bold text-dark">@item.MonthlyExpenses.ToString("N2") @Localizer["lv."]</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="expense-label text-secondary" style="color: #a87e55 !important;">
                                <i class="fas fa-tags"></i> @Localizer["One-Time Expenses"]:
                            </span>
                            <span class="fw-bold text-dark">@item.OneTimeExpenses.ToString("N2") @Localizer["lv."]</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="AddExpense" asp-route-id="@item.Id" class="btn btn-action-wide flex-grow-1 text-start ps-3">
                            <i class="fas fa-plus-circle me-2"></i> @Localizer["Add Expense"]
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning text-warning px-3" title="@Localizer["Edit"]">
                                <i class="fas fa-pen"></i>
                            </a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('@Localizer["Are you sure?"]');">
                                <button type="submit" class="btn btn-outline-danger px-3" title="@Localizer["Delete"]">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>