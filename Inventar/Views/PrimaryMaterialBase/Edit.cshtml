@model Inventar.Web.ViewModels.BaseViewModels.BaseEditViewModel

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Add Base" : "Edit Base";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <h4 class="mt-4">Capacity</h4>
            @for (int i = 0; i < Model.Capacities.Count; i++)
            {
                <div class="capacity-item border p-2 mb-2">
                    <input type="hidden" asp-for="Capacities[i].Id" />
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="Capacities[i].Type"></label>
                            <input asp-for="Capacities[i].Type" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Capacities[i].Quantity"></label>
                            <input asp-for="Capacities[i].Quantity" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Capacities[i].Unit"></label>
                            <input asp-for="Capacities[i].Unit" class="form-control" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger btn-sm w-100">Remove</button>
                        </div>
                    </div>
                </div>
            }

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
